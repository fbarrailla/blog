extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        p.date
          span=env.helpers.l10n.localize(article.date, 'DD. MMMM YYYY')
        h2
          a(href=article.url)= article.title
      section.content
        if article.intro.length > 0
          | !{ typogr(article.intro).typogrify() }
        if article.hasMore
          p.more
            a(href=article.url) lire la suite

block prepend footer
  div.nav
    if prevPage
      a(href=prevPage.url) « Plus récent
    else
      a(href='/archive.html') « Archives
    if nextPage
      a(href=nextPage.url) Page suivante »

